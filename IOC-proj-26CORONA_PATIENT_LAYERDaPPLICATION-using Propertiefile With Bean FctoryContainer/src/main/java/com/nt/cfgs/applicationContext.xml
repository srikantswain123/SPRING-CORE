<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">
  <bean id="ds" class="org.springframework.jdbc.datasource.DriverManagerDataSource">
  <property name="driverClassName" value="${jdbc.driver}"/>
  <property name="url" value="${jdbc.url}"/>
  <property name="username" value="${jdbc.user}"/>
  <property name="password" value="${jdbc.pwd}"/>
  
  </bean>
  <!-- <bean id="MysqlDrds" class="org.springframework.jdbc.datasource.DriverManagerDataSource">
  <property name="driverClassName" value="com.mysql.cj.jdbc.Driver"/>
  <property name="url" value="jdbc:mysql:///ntsp713"/>
  <property name="username" value="root"/>
  <property name="password" value="root"/> 
  
  </bean>-->
  <bean id="mysqlDao" class="com.nt.dao.MysqlPatientDAOImpl">
  <constructor-arg ref="ds"/>
  </bean>
  
  
  
  <bean id="oraDao" class="com.nt.dao.OraPatientDAOImpl">
  <constructor-arg ref="ds"/>
  </bean>
  
  <bean id="patientService" class="com.nt.service.CorornaPatientMGmtServiceImpl">
  <constructor-arg ref="oraDao"/>
<!-- <constructor-arg ref="mysqlDao"/> -->
  </bean>
  
  <bean id="mco" class="com.nt.controler.MainControler">
  <constructor-arg ref="patientService"/>
  </bean>
  <bean id="pphc" class="org.springframework.beans.factory.config.PropertyPlaceholderConfigurer">
     <property name="locations">
        <array>
           <value>com/nt/commons/jdbc.properties</value>
           <value>com/nt/commons/jdbc1.properties</value>
        
        </array>
     
     
     </property>  
  </bean>

</beans>
